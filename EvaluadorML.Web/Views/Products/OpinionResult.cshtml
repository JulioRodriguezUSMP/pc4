@{
    ViewData["Title"] = "Resultado de Rating";
}
@if (ViewBag.Product != null)
{
    var p = ViewBag.Product;
    <div class="card mb-3" style="max-width:600px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@p.image" class="img-fluid rounded-start" alt="@p.title" style="max-height:180px;object-fit:contain;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@p.title</h5>
                    <p class="card-text">@p.description</p>
                    <div class="mb-2 fw-bold">Precio: $@p.price</div>
                    @if (ViewBag.Rating != null)
                    {
                        <div class="alert alert-success">
                            <strong>¡Gracias por tu rating!</strong><br />
                            <strong>Rating enviado:</strong> @ViewBag.Rating estrella(s)
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">No se envió ningún rating.</div>
                    }
                    <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Volver a productos</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">No hay resultado para mostrar.</div>
}
